{
  "name": "ts-cnode",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.config.client.js",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.config.server.js",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "start": "cross-env NODE_ENV=production node server/index.js"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "highlight.js": "^10.4.1",
    "jsdom": "^16.3.0",
    "koa": "^2.13.0",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.1",
    "lru-cache": "^6.0.0",
    "normalize.css": "^8.0.0",
    "tslib": "^2.0.1",
    "vue": "^2.6.10",
    "vue-class-component": "^6.0.0",
    "vue-content-loader": "^0.2.1",
    "vue-meta": "^2.4.0",
    "vue-property-decorator": "^6.0.0",
    "vue-qrcode-reader": "^1.4.2",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.6.11",
    "vuex": "^3.0.1",
    "vuex-class": "^0.3.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@types/highlight.js": "^9.12.3",
    "@types/jest": "^22.0.1",
    "@vue/cli-plugin-babel": "^3.0.0-beta.15",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.15",
    "@vue/cli-plugin-typescript": "^3.0.0-beta.15",
    "@vue/cli-plugin-unit-jest": "^3.0.0-beta.15",
    "@vue/cli-service": "^3.0.0-beta.15",
    "@vue/eslint-config-prettier": "^3.0.0-rc.3",
    "@vue/eslint-config-typescript": "^3.0.0-rc.3",
    "@vue/test-utils": "^1.0.0-beta.16",
    "babel-core": "7.0.0-bridge.0",
    "cross-env": "^7.0.2",
    "eslint-friendly-formatter": "^4.0.1",
    "lint-staged": "^6.0.0",
    "node-sass": "^4.9.2",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-px-to-viewport": "^0.0.3",
    "rimraf": "^3.0.2",
    "sass-loader": "^9.0.2",
    "style-loader": "^1.2.1",
    "ts-jest": "^22.4.6",
    "typescript": "^3.4.3",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.0.9",
    "webpack-node-externals": "^2.5.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "ignore": [
      "./dist/**"
    ]
  }
}
